@*@model List<BookStore.ViewModels.BookViewModel>*@
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<section id="hero" class="d-flex align-items-center justify-content-center">
    <div class="container position-relative">
        <h1>Welcome to BookStore</h1>
        <h2>We are gathering a wide range of books here</h2>
    </div>
</section>

<section class="services" id="homeSec">
    <div class="container">

        <div class="section-title">
            <h2>Services 1</h2>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-6" v-for="book in books">
                <div class="icon-box">
                    <img class="w-50" :src="'/UploadedFiles/' + book.ImageName" />
                    <h4><a href="#" v-text="book.Title"></a></h4>
                    <p v-text="book.Price + '$'"></p>
                </div>
            </div>
        </div>

    </div>    
</section>

@section scripts{
    <script>
        var vm = new Vue({
            el: '#homeSec',
            data: {
                books: [],
            },
            mounted: function () {
                var self = this;
                $.ajax({
                    url: '/Home/GetStaffPics',
                    method: 'GET',
                    contentType: "application/json"
                }).done(function (res) {
                    if (res.Success) { self.books = res.CustomResult;}
                    else console.log(res);
                })
                .fail(function (res) {
                    console.log(res);
                });
            },
            methods: {
            }
        });
    </script>
}